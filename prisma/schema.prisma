generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  // --- CORRECTED ID FIELD ---
  id           String   @id @default(auto()) @map("_id") @db.ObjectId

  name         String
  quantity     Int
  buyingPrice  Float
  sellingPrice Float
  gstRate      Float

  sku          String?  @unique
  image        String?
  description  String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}